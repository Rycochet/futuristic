{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "jsx": "react",
        "lib": ["DOM", "ESNext"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ESNext"
    },
    "include": ["src", "vite-env.d.ts"]
}
